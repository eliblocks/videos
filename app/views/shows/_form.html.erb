<%= form_for @show do |f| %>
  <%= render 'shared/error_messages', object: @show %>
  <div class="field">
    <%= f.label :title, class: "label" %>
    <div class="control">
      <%= f.text_field :title, class: "input" %>
    </div>
  </div>
  <div class="field">
    <%= f.label :description, class: "label" %>
    <div class="control">
      <%= f.text_area :description, class: "textarea" %>
    </div>
  </div>
  <div class="field">
    <button type="button">Add Module</button>
  </div>
  <div class="field">
    <div class="control">
      <%= f.submit "Create Course", class: "button is-primary" %>
    </div>
  </div>
<% end %>