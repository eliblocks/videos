<div class="columns is-multiline">
  <% @courses.each do |course| %>
    <div class="column is-4">
      <%= link_to course_path(course) do %>
        <div class="card">
          <div class="card-content">
            <p class="title"><%= course.title %></p>
            <p class="subtitle">by <%= course.user.full_name %></p>
            <p><%= course.description %></p>
          </div>
          <footer class="card-footer">
            <span class="card-footer-item"><%= course.videos.count %> Videos</span>
            <span class="card-footer-item"><%= course.minutes %> Minutes</span>
          </footer>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
<div class="columns">
  <div class="column is-offset-4" >
    <%= paginate @courses %>
  </div>
</div>
