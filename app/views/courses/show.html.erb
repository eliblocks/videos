<div class="columns">
  <div class="column is-10-desktop">
    <div class="course-header">
      <span class="title is-4 course-title"><%= @course.title %></span>
       <%= link_to user_path(@course.user), class: "instructor-link" do %>
          <%=image_tag @course.user.image, size: "20x20", class: "rounded-profile" %>&nbsp;
          <%= @course.user.full_name %>
        <% end %>
    </div>
    <br>
    <% @sections.each do |section| %>
      <div class="list-item">
        <%= link_to section_path(section) do %>
          <div class="card">
            <div class="card-content section_info">
              <span>
                <%= section_header(section) %>
              </span>
              <span>
                <%= youtube_time(section.length_in_seconds) %>
              </span>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>

    <% if @course.user == current_user %>
      <br>
      <div class="edit-links">
        <%= link_to "Add Section", new_course_section_path(@course) %>
        <div>
          <br>
          <%= link_to "Edit Course", edit_course_path(@course) %>
        </div>
      </div>
    <% end %>

    <% if @course.long_description %>
      <%= render 'course_description' %>
    <% end %>
  </div>
</div>

