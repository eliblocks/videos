<p class="title"><%= @course.title %></p>
<% @sections.each do |section| %>
  <div class="columns">
    <div class="column list-item is-10-desktop">
      <%= link_to section_path(section) do %>
        <div class="card">
          <div class="card-content section_info">
            <span>
              <%= section_header(section) %>
            </span>
            <span>
              
            </span>
            <span>
              <%= youtube_time(section.length_in_seconds) %>
            </span>
          </div>
        </div>
      <% end %>
    </div>
    <% if @course.user == current_user %>
      <div class="column is-2-desktop">
        <%= link_to "Edit", edit_section_path(section) %> | 
        <%= link_to "Delete", section, method: :delete, data: { confirm: "Are you sure?" } %>
      </div>
  <% end %>
  </div>
  
<% end %>

<% if @course.user == current_user %> 
  <div class="columns">
    <div class="column">
      <%= link_to "Add Module", new_course_section_path(@course), class: "button is-primary" %>
      <div>
        <br>
        <%= link_to "Edit Course", edit_course_path(@course) %> | 
        <%= link_to "Delete Course", @course, method: :delete %>
      </div>
    </div>
  </div>
<% end %>
