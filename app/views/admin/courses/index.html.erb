<div class="columns">
  <div class="column">
    <table class="table">
      <thead>
        <tr>
          <th>Title</th>
          <th>User</th>
          <th>Approved</th>
      </thead>
      <tbody>
        <% @courses.each do |course| %>
          <tr>
            <td><%= link_to course.title, admin_course_path(course) %></td>
            <td><%= link_to course.user.full_name, user_path(course.user) %></td>
            <td><%= link_to course.approved.to_s, toggle_approval_admin_course_path(course), method: :post %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>