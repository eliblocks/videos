<div class="columns">
  <div class="column">
    <%= link_to "New User", new_admin_user_path %>
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Facebook ID</th>
          <th>Name</th>
          <th>Email</th>
          <th>admin</th>
          <th>Edit</th>
          <th>Impersonate</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td>
              <%= user.id %>
            </td>
            <td>
              <%= user.facebook_id %>
            </td>
            <td>
              <%= user.full_name %>
            </td>
            <td>
              <%= user.email %>
            </td>
            <td>
              <%= user.admin %>
            </td>
            <td>
              <%= link_to 'edit', edit_admin_user_path(user) %>
            </td>
            <td>
              <%= link_to 'impersonate', admin_impersonate_path(user.id) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>