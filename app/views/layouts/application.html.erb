<!DOCTYPE html>
<html>
  <head>
    <title>Videos</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= render 'layouts/nav' %>
    <div class="section">
      <div class="container">
        <% flash.each do |message_type, message| %>
          <%= content_tag(:div, message, class: "notification is-#{message_type}") %>
        <% end %>
        <%= yield %>
      </div>
    </div>
    <footer class="footer">
      <div class="content">
        <%= link_to 'About', '/about' %> | 
        <%= link_to 'Terms of Use', '/terms' %> |
        <%= link_to 'Payment Addendum', '/paymentaddendum' %> |
        <%= link_to 'Privacy Policy', '/privacy' %> |
        <%= link_to 'Contact', '/contact' %>
      </div>
    </footer>
  </body>
</html>
