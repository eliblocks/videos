<div class="columns is-multiline is-mobile">
  <% @videos.each do |video| %>
    <div class="column is-3-desktop is-4-tablet is-6-mobile">
      <div class="video-image">
        <figure class="image is-300x169">
          <%= link_to video_path(video) do %>
            <%= image_tag video.thumbnail_url %>
          <% end %>
        </figure>
        <span class="vid-length"> <%= youtube_time(video.length_in_seconds) %></span>
      </div>
      <div class="content">
        <p class="video-title"><%= link_to video.title, video_path(video), class: "plain-link" %></p>     
        <%= link_to video.user.full_name, user_path(video.user), class: "plain-link" %> | 
        <span> <%= video.seconds_viewed/60 %> Min</span>
      </div>
    </div>
  <% end %>
</div>




