<%= cloudinary_js_config %>
<script src="//widget.cloudinary.com/global/all.js" type="text/javascript"></script>
<script> cloudinary.setCloudName('eli'); </script>

<div class="columns">
  <div class="column is-half desktop">
    <%= form_for @video do |f| %>
      <div class="field">
        <div class="control">
          <%= f.text_field :title, class: "input", placeholder: "Title" %>
        </div>
      </div>
      <div class="field">
        <div class="control">
          <%= f.text_area :description, class: "input", placeholder: "Short Video Description", rows: 20 %>
        </div>
      </div>
      <div class="field">
        <button id="opener"></button>
      </div>
      <%= f.hidden_field :length_in_seconds %>
      <div class="field">
        <div class="control">
          <%= f.submit "Submit", class: "button is-primary", id: "video-submit" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script>
  cloudinary.applyUploadWidget(document.getElementById('opener'), 
  { upload_preset: 'bgebypf6',
    button_caption: 'Upload video'},
    function(error, result) {console.log(error, result)});
</script>




