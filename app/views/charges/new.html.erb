<% provide(:title, "Buy") %>
<script src="https://js.braintreegateway.com/web/dropin/1.3.1/js/dropin.min.js"></script>
<div class="columns">
  <div class="column is-6-desktop">
    <h3 class="title is-3">1,000 Minutes for $10</h3>
    <p class="sales-message">Browzable Minutes allow you to view any video on the site. As you watch, minutes will be deducted from your balance. Your minutes last for a full year, so no need to plan ahead, just reload when you need.</p><br>
    <div id="dropin-container">
    </div>
    <%= form_tag charges_path, id: "charge-form" do %>
      <%= hidden_field_tag 'nonce' %>
      <%= button_tag "Pay $10", type: "button", id: "submit-button", class: "button is-primary is-large" %>
    <% end %>
  </div>
</div>

<script>
    var button = document.querySelector('#submit-button');

    braintree.dropin.create({
      authorization: "<%= @client_token %>",
      container: '#dropin-container'
    }, function (createErr, instance) {
      button.addEventListener('click', function () {
        instance.requestPaymentMethod(function (err, payload) {
          if (err) {
            console.log(err);
          } else {
            $("input[name='nonce']").val(payload.nonce);
            $("#charge-form").submit();
          }
        });
      });
    });
  </script>