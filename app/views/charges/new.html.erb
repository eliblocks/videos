<div class="notification is-info">
Test card number: 4111 1111 1111 1111 
</div>
<div class="columns">
  <div class="column is-6-desktop">
    <div class="card">
      <div class="card-content">
        <p class="title is-4">Buy 2000 minutes for $10<p>
        <%= form_with model: @charge, id: "payment-form" do |f| %>
        <%= hidden_field_tag :payment_method_token, id: "payment-method-token" %>
        <%= button_tag "Enter Payment Info", onclick: "SpreedlyExpress.openView();", class: "button is-primary" %>
      </div>

    <% end %>
    </div>
  </div>
</div>

<script>
  SpreedlyExpress.init('2VElBlix1oRuGGoaCMbUx6Uyqp1', {
    "amount": "$9.83",
    "company_name": "Acme Widgets"
  });

    SpreedlyExpress.onPaymentMethod(function(token, paymentMethod) {

    // Send requisite payment method info to backend
    var tokenField = document.getElementById("payment_method_token");

    tokenField.setAttribute("value", token);

    var masterForm = document.getElementById('payment-form');
    masterForm.submit();
  });
</script>