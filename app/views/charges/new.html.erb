<div class="columns">
  <div class="column">
    <div class="card">
      <p>You can buy minutes to view videos here</p>
    </div>
  </div>
</div>
<div class="columns">
  <div class="column">
    <%= form_tag charges_path do %>
      <article>
        <% if flash[:error].present? %>
          <div id="error_explanation">
            <p><%= flash[:error] %></p>
          </div>
        <% end %>
        <label class="amount">
          <span>Amount: <%= number_to_currency(@amount/100) %></span>
        </label>
      </article>

      <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
              data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
              data-description="500 Minutes"
              data-amount=<%= @amount %>
              data-locale="auto"
              data-zip-code="true"
              data-email=<%= current_user.email %>></script>

    <% end %>
  </div>
</div>
<div class="columns">
  <div class="column">
    <p>Terms and conditions apply</p>
  </div>
</div>
