<div class="columns is-multiline">
  <% @users.each do |user| %>
    <div class="column is-3-desktop is-6-tablet">
      <div class="user-image">
        <figure class="image is-300x169">
          <%= link_to user_path(user), class: "user-image-link" do %>
            <%= image_tag user.image %>
          <% end %>
        </figure>

      </div>
      <div class="content">
        <p class="video-title"><%= link_to user.full_name, user_path(user), class: "plain-link" %></p>     
        <%= link_to user.videos.count, user_path(user), class: "plain-link video-title-link" %> videos | 
        <span> <%= number_to_human(user.balance/60) %> minutes</span>
      </div>
    </div>
  <% end %>
</div>