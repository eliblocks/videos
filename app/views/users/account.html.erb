<% provide(:title, "Account") %>
<div class="account">  
  <div class="columns">
    <div class="column">
      <h4 class="title is-4"><%= @user.full_name %> Account Information</h4>
      <h5 class="title is-5">Balance: <%= @user.minutes %> minutes</h5>
      <% if @user.videos %>
        <h2>Paypay Email Address: <%= @user.paypal_email || @user.email %>
      <% end %>
    </div>
  </div>
  <div class="columns">
    <div class="column">
      <p><%= "Used #{@minutes_used} minutes in the last #{@last_days} days" %></p>
    </div>
  </div>
  <div class="columns">
    <div class="column is-6-desktop">
      <p>Course Activity</p>
      <table class="table">
        <thead>
          <tr>
            <th>Course</th>
            <th>Minutes</th>
          </tr>
        </thead>
        <tbody>
          <% @most_watched_videos.each do |video, seconds| %>
            <tr>
              <td><%= video.title %></td>
              <td><%= seconds/60 %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="columns">
    <div class="column">
      <p>Most watched creators</p>
        <% @most_watched_uploaders.each do |user, seconds| %>
          <p><%= user.full_name %>: <%= seconds/60 %> min</p>
        <% end %>
    </div>
  </div>
  <%= link_to "Buy Minutes", new_charge_path %>
  <% if @user.uploader? %> | 
    <%= link_to "Cash out", new_charge_path %>
  <% end %>
    | <%= link_to "Edit Profile", edit_user_path(@user) %>
</div>
