<div class="columns">
  <div class="column is-6-desktop">
    <h4 class="title is-4">Edit Paypal Email Address</h4>
    <%= form_for @user do |f| %>
      <div class="field">
        <div class="control">
          <%= f.text_field :paypal_email, class: "input", value: @user.paypal_email || @user.emailr %>
        </div>
      </div>
      <div class="field">
        <div class="control">
          <%= f.submit "Submit", class: "button is-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

